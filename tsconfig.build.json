{
  "extends": "./tsconfig",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "./lib",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "example",
    "lib",
    "node_modules",
    "**/__tests__"
  ]
}